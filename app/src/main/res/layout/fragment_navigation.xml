<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundLightGreen"
    >

        <Button
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/gpsText"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gpsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorTextLightYellow" android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.522"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="150dp"/>
        <TextView
                android:text="TopText"
                android:layout_width="wrap_content"
                android:layout_height="26dp" android:id="@+id/gpsText2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.501"
                android:textSize="24sp"
                android:textColor="@color/colorTextLightYellow"
                app:layout_constraintBottom_toTopOf="@+id/imageView" android:layout_marginTop="64dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp" app:srcCompat="@drawable/ic_home_black_bigger"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="193dp" android:layout_marginStart="193dp"
                android:layout_marginEnd="194dp"
                android:layout_marginRight="194dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/gpsText" android:layout_marginBottom="120dp"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/gpsText2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>