<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundDarkGreen">


    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp" android:id="@+id/toolbarTop"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorBackgroundDarkGreen"
            android:elevation="4dp"
            android:theme="@style/Widget.AppCompat.Light.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/buttonProfile"
                    android:onClick="toHomeAdventureActivity"
                    app:srcCompat="@drawable/ic_profile"
                    android:background="@drawable/topbutton_layout"
                    android:layout_marginRight="20dp" android:layout_toLeftOf="@id/buttonSettings"/>
            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/buttonSettings"
                    android:onClick="toSettingsActivity"
                    app:srcCompat="@drawable/ic_98390"
                    android:background="@drawable/topbutton_layout" android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"/>
    <Button
            android:text="Home"
            android:layout_width="157dp"
            android:layout_height="90dp" android:id="@+id/buttonHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="toHomeAdventureActivity"
            android:paddingTop="15dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/toolbarTop" android:drawableTop="@drawable/ic_home_black_24dp" android:background="@color/colorTextLightYellow"/>
    <Button
            android:text="School"
            android:layout_width="157dp"
            android:layout_height="90dp" android:id="@+id/buttonSchool"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="toSchoolAdventureActivity"
            android:paddingTop="5dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toBottomOf="@+id/buttonHome" android:drawableTop="@drawable/ic_1923642" android:background="@color/colorTextLightYellow"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/buttonSchool"
            android:layout_marginTop="60dp" android:onClick="toARActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>