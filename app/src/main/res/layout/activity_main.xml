<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundDarkGreen" >


    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp" android:id="@+id/toolbarTop"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorBackgroundDarkGreen"
            android:elevation="4dp"
            android:theme="@style/Widget.AppCompat.Light.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/buttonProfile"
                app:layout_constraintEnd_toEndOf="parent" android:onClick="toHomeAdventureActivity"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_compass_symbol"
                android:background="@drawable/topbutton_layout"

        />

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/buttonSettings"
                app:layout_constraintEnd_toEndOf="parent" android:onClick="toHomeAdventureActivity"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:background="@drawable/topbutton_layout"/>

    </androidx.appcompat.widget.Toolbar>

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"/>
    <Button
            android:text="Home"
            android:layout_width="157dp"
            android:layout_height="90dp" android:id="@+id/buttonHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="toHomeAdventureActivity"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"/>
    <Button
            android:text="School"
            android:layout_width="157dp"
            android:layout_height="90dp" android:id="@+id/buttonSchool"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="toSchoolAdventureActivity"
            android:layout_marginTop="150dp" app:layout_constraintTop_toBottomOf="@+id/buttonHome"/>

</androidx.constraintlayout.widget.ConstraintLayout>