<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundLightGreen"
            tools:layout_editor_absoluteY="-172dp" tools:layout_editor_absoluteX="97dp">

        <CheckBox
                android:text="Optie 1"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie1"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/assignmentQuestionText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cbOptie6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>
        <CheckBox
                android:text="Optie 5"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie5"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/assignmentQuestionText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cbOptie6"
                app:layout_constraintVertical_bias="0.474" android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp" app:layout_constraintEnd_toEndOf="parent" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>
        <CheckBox
                android:text="Optie 6"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie6"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cbOptie3"
                android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie5" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>
        <CheckBox
                android:text="Optie 2"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie2"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie1"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cbOptie3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp" android:layout_marginStart="25dp" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>

        <CheckBox
                android:text="Optie 3"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie3"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cbOptie4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp" android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie2" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>

        <CheckBox
                android:text="Optie 7"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie7"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie6"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cbOptie8"
                android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>

        <CheckBox
                android:text="Optie 4"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie4"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie3" app:layout_constraintVertical_bias="0.918"
                app:layout_constraintBottom_toTopOf="@+id/checkAnswerButton" android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>

        <CheckBox
                android:text="Optie 8"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:id="@+id/cbOptie8"
                app:layout_constraintTop_toBottomOf="@+id/cbOptie3" app:layout_constraintVertical_bias="0.521"
                app:layout_constraintBottom_toTopOf="@+id/checkAnswerButton" android:layout_marginBottom="8dp"
                android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:checked="false"
                android:buttonTint="@color/colorDarkness"/>

        <Button
                android:text="Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkAnswerButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" android:layout_marginRight="5dp" android:layout_marginEnd="5dp"
                app:layout_constraintHorizontal_bias="0.821" android:layout_marginBottom="50dp"/>
        <TextView
                android:text="Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/assignmentQuestionText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.501"
                android:layout_marginTop="25dp" android:textSize="24sp"
                android:textColor="@color/colorTextLightYellow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>