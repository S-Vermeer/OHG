<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdventureActivity" android:layout_margin="0dp" android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" android:layout_marginRight="0dp" android:layout_marginBottom="0dp"
        android:padding="0dp" android:paddingLeft="10dp" android:paddingTop="0dp" android:paddingRight="10dp"
        android:background="@color/colorBackgroundDarkGreen"
        android:paddingBottom="0dp"
>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view_adventure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_adventure_menu"/>

    <fragment
            android:id="@+id/nav_host_fragment_adventure"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="371dp"
            android:layout_height="644dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/adventure_navigation"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view_adventure" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_host_fragment_adventure"
            app:layout_constraintBottom_toTopOf="@+id/nav_view_adventure" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="X.XX km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/distanceWalked"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment_adventure"
            app:layout_constraintEnd_toStartOf="@+id/timeWalked" app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:textColor="@color/colorTextDarkYellow"/>
    <TextView
            android:text="XX:XX min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timeWalked"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment_adventure"
            android:layout_marginLeft="106dp" android:layout_marginStart="106dp"
            app:layout_constraintStart_toEndOf="@+id/distanceWalked" android:textSize="24sp"
            android:textColor="@color/colorTextDarkYellow"/>

</androidx.constraintlayout.widget.ConstraintLayout>